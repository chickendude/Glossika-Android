<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/courseTitleLabel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAlignment="center"
		android:textSize="20sp"
		tools:text="Armenian"/>


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Sentence Set:"/>

	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="4dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="30dp"
			android:background="@drawable/sentence_list_border"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="8dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/baseLanguageCodeLabel"
						android:layout_width="40dp"
						android:layout_height="wrap_content"
						android:textAlignment="textEnd"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="EN"/>

					<TextView
						android:id="@+id/baseSentenceLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/baseAlternateSentenceLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:layout_width="40dp"
						android:layout_height="wrap_content"
						android:text="@string/alt"
						android:textAlignment="textEnd"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"/>

					<TextView
						android:id="@+id/baseAlternateSentenceLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/baseRomanizationLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:layout_width="40dp"
						android:layout_height="wrap_content"
						android:text="@string/rom"
						android:textAlignment="textEnd"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"/>

					<TextView
						android:id="@+id/baseRomanizationLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/baseIpaLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:layout_width="40dp"
						android:layout_height="wrap_content"
						android:text="@string/ipa"
						android:textAlignment="textEnd"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"/>

					<TextView
						android:id="@+id/baseIpaLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
				</LinearLayout>
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_margin="4dp"
				android:background="@color/colorTextLight"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="8dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/targetLanguageCodeLabel"
						android:layout_width="40dp"
						android:layout_height="wrap_content"
						android:textAlignment="textEnd"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="EN"/>

					<TextView
						android:id="@+id/targetSentenceLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/targetAlternateSentenceLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:layout_width="40dp"
						android:layout_height="wrap_content"
						android:text="@string/alt"
						android:textAlignment="textEnd"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"/>

					<TextView
						android:id="@+id/targetAlternateSentenceLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/targetRomanizationLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:layout_width="40dp"
						android:layout_height="wrap_content"
						android:text="@string/rom"
						android:textAlignment="textEnd"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"/>

					<TextView
						android:id="@+id/targetRomanizationLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/targetIpaLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:layout_width="40dp"
						android:layout_height="wrap_content"
						android:text="@string/ipa"
						android:textAlignment="textEnd"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"/>

					<TextView
						android:id="@+id/targetIpaLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:textColor="@color/colorTextDark"
						android:textSize="12sp"
						tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>

		<TextView
			android:id="@+id/indexLabel"
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:background="@drawable/sentence_number_background"
			android:padding="2dp"
			android:textAlignment="center"
			android:textColor="@color/colorTextWhite"
			android:textStyle="bold"
			tools:text="2999"/>

	</RelativeLayout>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/recyclerView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
</LinearLayout>