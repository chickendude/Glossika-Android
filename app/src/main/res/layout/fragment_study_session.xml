<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/courseTitleText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAlignment="center"
		android:textColor="@color/colorPrimary"
		android:textSize="24sp"
		android:textStyle="bold"
		tools:text="Armenian"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:gravity="center"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/remaining_reps"/>

			<TextView
				android:id="@+id/remainingRepsText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorTextDark"
				tools:text="225"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Estimated Time"/>

			<TextView
				android:id="@+id/remainingTimeText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorTextDark"
				tools:text="24:30"/>
		</LinearLayout>

		<ImageView
			android:id="@+id/playPauseImage"
			android:layout_width="0dp"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:src="@drawable/ic_play"/>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="end"
			android:orientation="vertical">

			<ImageView
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:scaleType="fitCenter"
				android:src="@drawable/ic_settings"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/total_reps"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorTextDark"
				tools:text="22055"/>
		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:background="@drawable/sentence_list_border"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="8dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/baseLanguageCodeText"
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:textAlignment="textEnd"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="EN"/>

				<TextView
					android:id="@+id/baseSentenceText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/baseAlternateSentenceLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:text="@string/alt"
					android:textAlignment="textEnd"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"/>

				<TextView
					android:id="@+id/baseAlternateSentenceText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/baseRomanizationLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:text="@string/rom"
					android:textAlignment="textEnd"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"/>

				<TextView
					android:id="@+id/baseRomanizationText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/baseIpaLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:text="@string/ipa"
					android:textAlignment="textEnd"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"/>

				<TextView
					android:id="@+id/baseIpaText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
			</LinearLayout>
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_margin="8dp"
			android:background="@color/colorTextLight"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="8dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/targetLanguageCodeText"
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:textAlignment="textEnd"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="EN"/>

				<TextView
					android:id="@+id/targetSentenceText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/targetAlternateSentenceLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:text="@string/alt"
					android:textAlignment="textEnd"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"/>

				<TextView
					android:id="@+id/targetAlternateSentenceText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/targetRomanizationLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:text="@string/rom"
					android:textAlignment="textEnd"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"/>

				<TextView
					android:id="@+id/targetRomanizationText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/targetIpaLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="40dp"
					android:layout_height="wrap_content"
					android:text="@string/ipa"
					android:textAlignment="textEnd"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"/>

				<TextView
					android:id="@+id/targetIpaText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:textColor="@color/colorTextDark"
					android:textSize="12sp"
					tools:text="Look, there's my friend! But why is my friend at school and not with me?"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>